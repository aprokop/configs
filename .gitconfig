[user]
    name = Andrey Prokopenko
    email = aprokop@sandia.gov
[alias]
    ci = commit
    co = checkout
    st = status
    br = branch -v
    fp = format-patch -k -M -N
    log1 = log --pretty=oneline --abbrev-commit
    ls = ls-files
    # authors = log --all --format="%aN"
    authors = log --format="%aN"
[apply]
    whitespace = fix
[core]
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    # pager = vim -R -
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[gui]
    fontui = -family helvetica -size 10 -weight normal -slant roman -underline 0 -overstrike 0
    fontdiff = -family terminus -size 10 -weight normal -slant roman -underline 0 -overstrike 0
